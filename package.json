{
  "name": "nexus-core",
  "version": "0.1.0",
  "description": "NexusCore - Comprehensive TODO management API system",
  "main": "index.js",
  "scripts": {
    "dev": "bun src/index.ts",
    "typecheck": "tsc --noEmit",
    "build": "bun run typecheck && bun run build-only",
    "build-only": "bun build src/index.ts --outdir dist --target bun",
    "start": "bun dist/index.js",
    "test": "NODE_ENV=test bun test",
    "lint": "biome check",
    "prepare": "husky",
    "format": "biome check --write",
    "generate": "drizzle-kit generate",
    "migrate": "bun run src/db/migrate.ts",
    "studio": "drizzle-kit studio"
  },
  "dependencies": {
    "@databases/sqlite": "^4.0.2",
    "@hono/zod-validator": "^0.5.0",
    "@libsql/client": "^0.15.5",
    "@scalar/hono-api-reference": "^0.9.3",
    "@types/uuid": "^10.0.0",
    "drizzle-kit": "^0.31.1",
    "drizzle-orm": "^0.43.1",
    "hono": "^4.7.4",
    "hono-openapi": "^0.4.8",
    "reflect-metadata": "^0.2.2",
    "sqlite3": "^5.1.7",
    "tslog": "^4.9.3",
    "tsyringe": "^4.10.0",
    "uuid": "^11.1.0",
    "zod": "^3.25.56",
    "zod-openapi": "^4.2.4"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@tsconfig/strictest": "^2.0.5",
    "@types/bun": "latest",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.0",
    "typescript": "^5.8.2"
  },
  "lint-staged": {
    "*.{ts,tsx}": "bun run format"
  }
}
